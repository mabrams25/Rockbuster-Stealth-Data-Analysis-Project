SELECT E.name AS "Genre",
       SUM(amount) AS "Total Revenue"
FROM payment A
FULL JOIN rental B ON A.rental_id = B.rental_id
FULL JOIN inventory C ON B.inventory_id = C.inventory_id
FULL JOIN film_category D ON C.film_id = D.film_id
FULL JOIN category E ON D.category_id = E.category_id
GROUP BY 1
ORDER BY 2 DESC
